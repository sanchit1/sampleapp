<h1>Listing documents</h1>
<h1>Documents</h1>
<% @documents.each do |doc| %>
  <%= link_to doc.filename, doc.public_filename, :target => '_blank' %><br />
<% end %>
<table>
  <tr>
    <th>Parent</th>
    <th>Content type</th>
    <th>Filename</th>
    <th>Size</th>
    <th>Attachable</th>
    <th>Attachable type</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.parent_id %></td>
    <td><%= document.content_type %></td>
    <td><%= document.filename %></td>
    <td><%= document.size %></td>
    <td><%= document.attachable_id %></td>
    <td><%= document.attachable_type %></td>
    <td><%= document.title %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

